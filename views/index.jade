			div.col-lg-4
				p.text-center.
					<a class="btn btn-default" href="/feedback" role="button">&raquo; Nachricht verfassen</a>
		div.row
			p.
				&nbsp;

		div.row(style="display:none")
			div.col-lg-4
				p
