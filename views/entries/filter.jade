div.row
	div.col-lg-12

		div.row
			div.col-lg-12
				div.panel.panel-default
					div.panel-heading
						h3.panel-title.
							Filtern
					div.panel-body
							form(role="form",method="GET",action="/suche",id="filter")
								input(type="hidden",name="searching",value="true")
								div.row
										div.col-lg-5
											div.input-group 
												span.input-group-addon
													span.glyphicon.glyphicon-search
												- if (term == undefined || term.length === 0)
													input(type="text",class="form-control",placeholder="Dein Suchbegriff",name="term") 
												- else
													input(type="text",class="form-control",placeholder="",name="term",value="#{term}") 
												- endif
								div.row
										div.col-lg-3
											div.checkbox
												label
													- if (local === true)
														input(type="checkbox",name="local",checked="checked")
													- else
														input(type="checkbox",name="local")
													- endif
													|Lokale Angebote
										div.col-lg-3
											div.checkbox
												label
													- if (online === true)
														input(type="checkbox",name="online",checked="checked")
													- else
														input(type="checkbox",name="online")
													- endif
													|Online-Angebote
										div.col-lg-3
											div.checkbox
												label
													- if (brand === true)
														input(type="checkbox",name="brand",checked="checked")
													- else
														input(type="checkbox",name="brand")
													- endif
													|Marke
								div.row
										div.col-lg-3
											div.checkbox.pull-left
												label
													- if (fair === true)
														input(type="checkbox",name="fair",checked="checked")
													- else
														input(type="checkbox",name="fair")
													- endif
													|&uuml;berwiegend fair
											a(href="#",data-toggle="popover").pull-left#popfair
												img(src="/img/info.png",style="width:25px;margin-top:9px;margin-left:10px;")

										div.col-lg-3
											div.checkbox.pull-left
												label
													- if (bio === true)
														input(type="checkbox",name="bio",checked="checked")
													- else
														input(type="checkbox",name="bio")
													- endif
													|&uuml;berwiegend biologisch

											a(href="#",data-toggle="popover").pull-left#popbio
												img(src="/img/info.png",style="width:25px;margin-top:9px;margin-left:10px;")

										div.col-lg-3
											div.checkbox.pull-left
												label
													- if (regional === true)
														input(type="checkbox",name="regional",checked="checked")
													- else
														input(type="checkbox",name="regional")
													- endif
													|&uuml;berwiegend regional

											a(href="#",data-toggle="popover").pull-left#popregional
												img(src="/img/info.png",style="width:25px;margin-top:9px;margin-left:10px;")

										div.col-lg-3
											div.checkbox.pull-left
												label
													- if (used === true)
														input(type="checkbox",name="used",checked="checked")
													- else
														input(type="checkbox",name="used")
													- endif
													|&uuml;berwiegend gebraucht

											a(href="#",data-toggle="popover").pull-left#popused
												img(src="/img/info.png",style="width:25px;margin-top:9px;margin-left:10px;")


									div.row
										div.col-lg-12
											&nbsp;

									div.accordion#accordion1
										div.accordion-group
												div.row
													div.col-lg-12
														div.accordion-heading
															|<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1" href="#collapseThree">Nach Produkten filtern</a>
														div(id="collapseThree",class="accordion-body collapse ")
															div.accordion-inner
																div.row
																	div.col-lg-12
																		- var c = 0;
																		each subcategory in subcategories["products"]
																			div.col-lg-3
																				- if (checkboxes_checked_in_view[subcategory.title]) {
																					input(type="checkbox",name="product_subcategory[#{c}]",checked="checked") 
																					span &nbsp;#{subcategory.title} 

																				- } else {
																					input(type="checkbox",name="product_subcategory[#{c}]") 
																					span &nbsp;#{subcategory.title} 
																				- }
																				- c++;

									div.accordion#accordion2
										div.accordion-group
												div.row
													div.col-lg-12

														div.accordion-heading
															|<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">Nach Dienstleistungen filtern</a>
														div(id="collapseTwo",class="accordion-body collapse ")
															div.accordion-inner
																div.row
																	div.col-lg-12
																		- var c = 0;
																		each subcategory in subcategories["services"][0].list
																			div.col-lg-3
																				- if (checkboxes_checked_in_view[subcategory.value]) {

																					input(type="checkbox",name="service_subcategory[#{c}]",checked="checked") 
																					span &nbsp;#{subcategory.value} 

																				- } else {
																					input(type="checkbox",name="service_subcategory[#{c}]") 
																					span &nbsp;#{subcategory.value} 
																				- }
																				- c++;


									div.accordion#accordion3
										div.accordion-group
												div.row
													div.col-lg-12
														//|&nbsp;<br/>
														//h4 Umkreissuche

														div.accordion-heading
															|<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion3" href="#collapseOne">Umkreissuche</a>
														div(id="collapseOne",class="accordion-body collapse ")
															div.accordion-inner
																div.row
																	div.col-lg-5
																		div.input-group 
																			span.input-group-addon
																				span Rund um:
																			- if (umkreis == undefined || umkreis.length === 0)
																				input(type="text",class="form-control",placeholder="Ort",name="umkreis") 
																			- else
																				input(type="text",class="form-control",placeholder="",name="umkreis",value="#{umkreis}") 
																	div.col-lg-3
																		div.input-group 
																			span.input-group-addon Distanz:
																			- if (distance == undefined || distance.length === 0)
																				input(type="text",class="form-control",placeholder="Entfernung",name="distance",value="50") 
																			- else
																				input(type="text",class="form-control",placeholder="",name="distance",value="#{distance}") 
																			span.input-group-addon km
									div.row
										div.col-lg-12.
													&nbsp;<br/>
													<button style="width:100%" type= "submit" class="btn btn-default">Suche starten!</button> 
				hr
