extends ../layout

block jumbotron
	div.jumbotron
		div.container
			h1 Neuer Eintrag

			div.sub.
				Lorem Ipsum dolor sit amet

block content
	div.row
		div.col-lg-12
			h2 Neuer Eintrag


	div.row
		div.col-lg-12
			- if (errors != undefined && errors.length > 0) 
				div.alert.alert-danger(style="") 
					strong Oops!
					span.
						Irgendetwas passt noch nicht ganz!
						Schau dir deine Eingabe
						nochmal in Ruhe an.

					p
						ul
							each error in errors
								li.
									#{error}
			- else
				p.
					Senden Sie uns einfach eine Nachricht!
					Wir versuchen schnellstm&ouml;glich
					darauf zu reagieren.
			- endif

				p &nbsp;

			form(role="form",method="POST",action="#").form-horizontal
				div(class="form-group #{error_fields.name}").
					<label for="name" class="col-lg-2 control-label">Anbieter</label>
					<div class="col-lg-10">
						<input type="text" value="#{values.name}" name="name" class="form-control" id="name" placeholder="">
						<p class="help-block"></p>
					</div>

				div(class="form-group #{error_fields.categories}")
					label.col-lg-2.control-label(for="categories") Kategorie
					each category in categories
						div.col-lg-2
							- if (values["category_" + category.value.key] === true)
								input(name="category_#{category.value.key}", type="checkbox", checked="checked") 
							- else
								input(name="category_#{category.value.key}", type="checkbox") 
							- endif
							span.
								#{category.value.value}

				div(class="form-group #{error_fields.classifications}")
					label.col-lg-2.control-label(for="classifications") Einordnung

					div.col-lg-3
						- if (values["fair"] === true)
							input(name="fair", type="checkbox", checked="checked").
							span überwiegend faire Produkte
						- else
							input(name="fair", type="checkbox").
							span überwiegend faire Produkte
						- endif
					div.col-lg-3
						- if (values["bio"] === true)
							input(name="bio", type="checkbox", checked="checked").
							span überwiegend biologische Produkte
						- else
							input(name="bio", type="checkbox").
							span überwiegend biologische Produkte
						- endif
					div.col-lg-3
						- if (values["regional"] === true)
							input(name="regional", type="checkbox", checked="checked").
							span überwiegend regionale Produkte
						- else
							input(name="regional", type="checkbox").
							span überwiegend regionale Produkte
						- endif

				div(class="form-group #{error_fields.online_local}").
					<label for="online_local" class="col-lg-2 control-label">Online oder lokal?</label>
					<div class="col-lg-2">
						<input type="radio" name="online_local" value="online" /> Online-Angebot
					</div>
					<div class="col-lg-2">
						<input type="radio" name="online_local" value="local" /> Lokales Angebot
					</div>

				div(class="form-group #{error_fields.uri}").
					<label for="uri" class="col-lg-2 control-label">Internet-Adresse</label>
					<div class="col-lg-10">
						<input type="url" name="uri" class="form-control" id="uri" placeholder="">
					</div>

				div(class="form-group #{error_fields.address}").
					<label for="address" class="col-lg-2 control-label">Adresse</label>
					<div class="col-lg-10">
						<textarea id="address" name="address" class="form-control" rows="3" maxlength="500"></textarea>
					</div>

				div(class="form-group #{error_fields.description}").
					<label for="description" class="col-lg-2 control-label">Beschreibung</label>
					<div class="col-lg-10">
						<textarea id="description" name="description" class="form-control" rows="3" maxlength="500"></textarea>
					</div>

				div(class="form-group #{error_fields.agb}").
					<label for="agb" class="col-lg-2 control-label">AGB</label>
					<div class="col-lg-10">
						<input name="agb" id="agb" type="checkbox" /> Ich habe die AGB gelesen und stimme diesen zu.
					</div>

				div.form-group.
					<div class="col-lg-offset-2 col-lg-10">
						<button type="submit" class="btn btn-default">Absenden</button>
					</div>
