- if (list != undefined && list.length > 0)
	div.row
		div.col-lg-12(style="display:none")
			p
				strong.
					Anzeige: #{list.length}/#{list.length} Eintr&auml;ge
			p
				&nbsp;

		each entry in list
			div.col-lg-6
				div.panel.panel-default(style="height:150px")
					div.panel-body
						p	
							a(href="/eintraege/#{entry.value._id}/").
								#{entry.value.name}
						p
							- if (entry.value.description.length > 125)
								|#{entry.value.description.substr(0,125)}&hellip;
							- else
								|#{entry.value.description}
							- endif
						p.
							<a class="pull-right btn btn-default" href="/eintraege/#{entry.value._id}/">&raquo; Mehr</a> 
- else
	div.row
		div.col-lg-12
			p Es sind leider keine Eintr&auml;ge vorhanden.
- endif

