extends ../layout

block jumbotron
	div.jumbotron
		div.container
			h1 Alle Eintr&auml;ge

			div.sub.
				Lorem.

block breadcrumbs
	ol.breadcrumb.
		<li><a href="/eintraege/alle">Alle Eintr&auml;ge</a></li>
		<li class="active">#{doc.name}</li>

block content
	div.row
		div.col-lg-6
			h2 Eintrag: #{doc.name}

			each paragraph in doc.description
				p.
					#{paragraph}
		div.col-lg-2
		div.col-lg-4
				div.panel.panel-default(style="margin-top:20px")
					div.panel-heading
						h3.panel-title.
							Infos
					div.panel-body
							dl.dl-horizontal
								dt Kategorien
								dd
									- for (var c in doc.categories) {
										|#{doc.categories[c].value}<br />
									- }

								dt Klassifikationen
								dd
									- for (var c in doc.classifications) {
										|#{doc.classifications[c].value}<br />
									- }

								dt Online-Eintrag?
								dd
									- if (doc.online)
										|Ja
									- else
										|Nein
									- endif

								dt Lokaler Eintrag?
								dd
									- if (doc.local)
										|Ja
									- else
										|Nein
									- endif

								dt Internet-Adresse
								dd
									a(href="#{doc.uri}",rel="nofollow").
											#{doc.uri}
